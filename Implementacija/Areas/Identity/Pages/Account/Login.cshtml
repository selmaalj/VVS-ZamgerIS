@page
@model LoginModel
@using ooadproject.Models
@inject SignInManager<Person> SignInManager
@inject UserManager<Person> UserManager


@{
    ViewData["Title"] = "Prijava";
}

<h1 class="text-center">Zamger</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h3 class="text-center">Prijavite se sa svojim korisničkim nalogom</h3>

                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating  pb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating pb-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox pb-1">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Zapamti me
                        </label>
                    </div>
                </div>
                <div class="">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Prijava</button>
                </div>
                
            </form>
        </section>
    </div>
 </div>   

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
